<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd  http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
	<changeSet id="20201202_223300" author="Leandro Zanatta" logicalFilePath="20201202_223300_tb_contaspagarveiculo.xml">

		<preConditions onFail="CONTINUE">
			<not>
				<tableExists tableName="tb_contaspagarveiculo" />
			</not>
		</preConditions>

		<createTable tableName="tb_contaspagarveiculo">

			<column name="id_contaspagarveiculo" type="${numeric.18x0}" remarks="CÓDIGO IDENTIFICADOR">
				<constraints primaryKey="true" primaryKeyName="contaspagarveiculo_pk" nullable="false" />
			</column>

			<column name="cd_contaspagar" type="${numeric.18x0}" remarks="CÓDIGO DO CONTAS A PAGAR">
				<constraints nullable="false" foreignKeyName="cliente_contaspagarveiculo_fk" references="tb_contaspagar(id_contaspagar)" />
			</column>

			<column name="cd_veiculo" type="${numeric.18x0}" remarks="CÓDIGO DO VEÍCULO">
				<constraints nullable="true" foreignKeyName="veiculo_contaspagarveiculo_fk" references="tb_veiculo(id_veiculo)" />
			</column>

			<column name="cd_motorista" type="${numeric.18x0}" remarks="CÓDIGO DO MOTORISTA">
				<constraints nullable="true" foreignKeyName="motorista_contaspagarveiculo_fk" references="tb_motorista(id_motorista)" />
			</column>

			<column name="tx_documento" type="${varchar.10}" remarks="NÚMERO DO DOCUMENTO">
				<constraints nullable="false" />
			</column>

			<column name="vl_parcela" type="${numeric.18x2}" remarks="VALOR DA PARCELA">
				<constraints nullable="false" />
			</column>

		</createTable>

		<createSequence sequenceName="gen_contaspagarveiculo" />
	</changeSet>
</databaseChangeLog>
